<Window x:Class="WPF.SiteManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Sites" Height="450" Width="800">

    <Grid Margin="10">
        <StackPanel Orientation="Vertical">

            <!-- Tableau des sites -->
            <DataGrid x:Name="SiteDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding Sites}"
                      CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdSite}" Width="100"/>
                    <DataGridTextColumn Header="Ville" Binding="{Binding City}" Width="*"/>

                    <!-- Colonne Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Modifier" Click="EditSite_Click" Tag="{Binding}"
                                            Width="75" Margin="5"/>
                                    <Button Content="Supprimer" Click="DeleteSite_Click" Tag="{Binding IdSite}"
                                            Background="#9981c8" Foreground="White" Width="75"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Boutons en bas -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Ajouter un Site" Click="AddSite_Click" Width="150"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
