<Window x:Class="WPF.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administration - AgroCube"
        Height="450" Width="800"
        WindowState="Maximized"
        Background="#186942">
    <!-- Fond sombre -->

    <Grid Background="#186942">
        <!-- Fond sombre -->

        <!-- Titre -->
        <TextBlock Text="Panneau Administrateur"
                   Foreground="#f6ffdd"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>

        <!-- Barre de séparation -->
        <Rectangle Fill="#f6ffdd" Height="3" VerticalAlignment="Top" Margin="10,70,10,0"/>

        <!-- Conteneur pour les boutons -->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >

            <Button Content="Gérer les employés"
                    Width="250"
                    Height="50"
                    Background="#f6ffdd"
                    Foreground="#a0c85e"
                    FontSize="16"
                    Click="ManageEmployees_Click"
                    Cursor="Hand"
                    BorderThickness="0"/>

            <Button Content="Gérer les sites"
                    Width="250"
                    Height="50"
                    Background="#f6ffdd"
                    Foreground="#a0c85e"
                    FontSize="16"
                    Click="ManageSites_Click"
                    Cursor="Hand"
                    BorderThickness="0"/>

            <Button Content="Gérer les services"
                    Width="250"
                    Height="50"
                    Background="#f6ffdd"
                    Foreground="#a0c85e"
                    FontSize="16"
                    Click="ManageServices_Click"
                    Cursor="Hand"
                    BorderThickness="0"/>

            <Button Content="Déconnexion"
                    Width="250"
                    Height="50"
                    Background="#9981c8"
                    Foreground="White"
                    FontSize="16"
                    Click="Logout_Click"
                    Cursor="Hand"
                    BorderThickness="0"/>

        </StackPanel>

    </Grid>
</Window>
