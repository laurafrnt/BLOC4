<Window x:Class="WPF.EditEmployeeManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier un Employé" Height="230" Width="400"
        Background="#186942">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nom -->
        <TextBlock Text="Nom :" Grid.Row="0"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="0" Margin="100,0,0,0" Width="250"/>

        <!-- Prénom -->
        <TextBlock Text="Prénom :" Grid.Row="1"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="1" Margin="100,0,0,0" Width="250"/>

        <!-- Email -->
        <TextBlock Text="Email :" Grid.Row="2"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="2" Margin="100,0,0,0" Width="250"/>

        <!-- Téléphone -->
        <TextBlock Text="Téléphone :" Grid.Row="3"/>
        <TextBox x:Name="PhoneNumberTextBox" Grid.Row="3" Margin="100,0,0,0" Width="250"/>

        <!-- Date de naissance -->
        <TextBlock Text="Date de naissance :" Grid.Row="4"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="4" Margin="100,0,0,0" Width="250"/>

        <!-- Site -->
        <TextBlock Text="Site :" Grid.Row="5"/>
        <ComboBox x:Name="SiteComboBox" Grid.Row="5" Margin="100,0,0,0" Width="250"
                  ItemsSource="{Binding Sites}" DisplayMemberPath="City"/>

        <!-- Service -->
        <TextBlock Text="Service :" Grid.Row="6"/>
        <ComboBox x:Name="ServiceComboBox" Grid.Row="6" Margin="100,0,0,0" Width="250"
                  ItemsSource="{Binding Services}" DisplayMemberPath="Name"/>

        <!-- Boutons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Modifier" Click="UpdateEmployee_Click" Width="100" Margin="5"/>
            <Button Content="Annuler" Click="Cancel_Click" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
