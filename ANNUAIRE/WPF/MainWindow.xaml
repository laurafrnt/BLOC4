<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroCube - Annuaire Employés" Height="450" Width="800">

    <Grid Background="#f6ffdd">

        <!-- Titre -->
        <TextBlock Text="AgroCube" 
                   Foreground="#186942" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"/>

        <!-- Barre de séparation -->
        <Rectangle Fill="#186942" Height="3" VerticalAlignment="Top" Margin="10,50,10,0"/>

        <!-- DataGrid avec un peu de style -->
        <DataGrid x:Name="EmployeeDataGrid"
                  Margin="10,60,10,10"
                  Background="White"
                  ItemsSource="{Binding Employees}" 
                  AutoGenerateColumns="True"
                  RowBackground="#c5e197"
                  AlternatingRowBackground="White"
                  BorderBrush="#186942"
                  BorderThickness="1"
                  Padding="5"/>

    </Grid>
</Window>
