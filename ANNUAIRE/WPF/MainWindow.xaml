<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroCube - Annuaire Employés" 
        Height="450" Width="800" 
        WindowState="Maximized">

    <Grid Background="#f6ffdd">

        <!-- Titre -->
        <TextBlock Text="Annuaire Employés AgroBloc" 
                   Foreground="#186942" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"/>

        <!-- Barre de séparation -->
        <Rectangle Fill="#186942" Height="3" VerticalAlignment="Top" Margin="10,50,10,0"/>

        <!-- DataGrid stylisé -->
        <DataGrid x:Name="EmployeeDataGrid"
                  Margin="10,60,10,10"
                  Background="White"
                  ItemsSource="{Binding Employees}" 
                  AutoGenerateColumns="False"
                  RowBackground="#c5e197"
                  AlternatingRowBackground="White"
                  BorderBrush="#186942"
                  BorderThickness="1"
                  SelectionMode="Single"
                  HorizontalAlignment="Stretch">

            <!-- Définition des colonnes -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Téléphone" Binding="{Binding PhoneNumber}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                <DataGridTextColumn Header="Date de naissance" Binding="{Binding Birthday}" Width="*" />
                <DataGridTextColumn Header="Site" Binding="{Binding Site.City}" Width="*" />
                <DataGridTextColumn Header="Service" Binding="{Binding Service.Name}" Width="*" />
            </DataGrid.Columns>


        </DataGrid>
    </Grid>
</Window>
