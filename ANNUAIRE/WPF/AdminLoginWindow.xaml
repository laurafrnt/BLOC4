<Window x:Class="WPF.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion Administrateur" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Mot de passe :" Margin="5" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" Width="150" Margin="5" HorizontalAlignment="Center"/>
            <Button Content="Se connecter" Click="LoginButton_Click" Width="100" Margin="5" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>

</Window>
